<!DOCTYPE html>
<!--[if IE 8]> <html lang="en" class="ie8"> <![endif]-->
<!--[if !IE]><!-->
<html lang="en">
  <!--<![endif]-->
  <%= partial :'layouts/head' %>
  <body>

    <div id="fb-root"></div>
    <script>(function (d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id))
          return;
        js = d.createElement(s);
        js.id = id;
        js.src = 'https://connect.facebook.net/en_GB/sdk.js#xfbml=1&version=v3.2&appId=1498399346894704&autoLogAppEvents=1';
        fjs.parentNode.insertBefore(js, fjs);
      }(document, 'script', 'facebook-jssdk'));</script>   

    <%= partial :alert %>

    <!-- BEGIN #page-container -->
    <div id="page-container" class="page-header-fixed page-sidebar-fixed">
      <!-- BEGIN #header -->
      <div id="header" class="header navbar navbar-inverse navbar-fixed-top">
        <!-- BEGIN container-fluid -->
        <div class="container-fluid">
          <!-- BEGIN mobile sidebar expand / collapse button -->
          <div class="navbar-header">
            <a href="/" class="navbar-brand">
              <%= @group ? %Q{<span style="position: relative; top: 0.3rem"><span class="hw">A</span><span class="hw ml-2 mr-1">/</span><span style="position: relative; top: -0.15rem">#{@group.name}</a></span>} : '<span class="hw">Autopo</span>' %>
            </a>
            <button type="button" class="navbar-toggle" data-click="sidebar-toggled">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
          </div>
          <!-- END mobile sidebar expand / collapse button -->

          <!-- BEGIN header navigation right -->
          <div class="navbar-xs-justified">
            <ul class="nav navbar-nav navbar-right">

              <% if current_account %>

                <li>
                  <a href="javascript:;" data-toggle="search-bar" class="navbar-icon">
                    <i class="ti-search"></i>
                  </a>
                </li>              

                <li class="dropdown">
                  <a id="notification-bell" href="javascript:;" data-toggle="dropdown" class="dropdown-toggle navbar-icon" onclick="$.post('/checked_notifications')">
                    <i class="ti-bell"></i>
                  </a>  
                  <style>#notifications .fa-spin { display: none }</style>
                  <div id="notifications" data-pagelet-url="/notifications"></div>                                    
                </li>              

                <li class="dropdown">
                  <a href="javascript:;" data-toggle="dropdown">
                    <span class="navbar-user-img online pull-left">
                      <img src="<%=current_account.picture_thumb_or_gravatar_url %>" />
                    </span>
                    <span class="hidden-xs "><%=current_account.name%> <b class="caret"></b></span>
                  </a>

                  <%= partial :'nav_profile', locals: {ul_class: 'dropdown-menu'} %>

                </li>
              <% else %>

                <li>
                  <a href="/accounts/sign_up">
                    Sign up
                  </a>
                </li>                

                <li>
                  <a href="/accounts/sign_in">
                    Sign in
                  </a>
                </li>                                

              <% end %>
            </ul>
          </div>
          <!-- END header navigation right -->
        </div>
        <!-- END container-fluid -->
        <!-- BEGIN header-search-bar -->
        <div class="header-search-bar">
          <form action="/search" name="search_bar_form">
            <div class="form-group">
              <div class="left-icon"><i class="ti-search"></i></div>
              <input name="q" type="text" class="form-control" id="header-search" />
              <a href="javascript:;" data-dismiss="search-bar" class="right-icon"><i class="ti-close"></i></a>
            </div>
          </form>
        </div>
        <!-- END header-search-bar -->
      </div>
      <!-- END #header -->

      <!-- BEGIN #sidebar -->
      <div id="sidebar" class="sidebar sidebar-inverse">
        <!-- BEGIN scrollbar -->
        <div data-scrollbar="true" data-height="100%">
          <%= partial :nav %>
        </div>
        <!-- END scrollbar -->
        <!-- BEGIN sidebar-minify-btn -->
        <a href="#" class="sidebar-minify-btn" data-click="sidebar-minify"><i class="ti-arrow-left"></i></a>
        <!-- END sidebar-minify-btn -->
      </div>
      <!-- END #sidebar -->

      <!-- BEGIN #content -->
      <div id="content" class="content">

        <%= content_blocks[:content.to_sym].present? ? yield_content(:content) : yield %>

      </div>
      <!-- END #content -->

      <!-- BEGIN btn-scroll-top -->
      <a href="#" data-click="scroll-top" class="btn-scroll-top fade"><i class="ti-arrow-up"></i></a>
      <!-- END btn-scroll-top -->
    </div>
    <!-- END #page-container -->

    <div class="modal fade" tabindex="-1" role="dialog" id="modal">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
        </div><!-- /.modal-content -->
      </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->    

  </body>
</html>
