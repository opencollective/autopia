


<div class="row">  
  <div class="col-sm-4 order-sm-2 mb-3">

    <div data-pagelet-url="/a/<%=@group.slug%>/todos">
      <%= partial :'groups/todos' %>
    </div>    
    <% if @group.intro_for_members %>  
      <%= @group.intro_for_members %>        
    <% end %>  
    <h2>Online now</h2>
    <div class="image-wall">
      <% @group.members.where(:last_active.gt => 5.minutes.ago).each { |account| %>
        <%= partial :'accounts/square', :locals => {:account => account, :content => (if account.last_active; "#{time_ago_in_words account.last_active} ago"; end), :width => '75px'} %>
      <% } %>
    </div>

    <% if @group.facebook_group_url %>
      <div class="fb-group mt-3" data-href="<%=@group.facebook_group_url%>" data-width="300" data-show-social-context="true" data-show-metadata="false"></div>
    <% end %>

  </div>
  <div class="col-sm-8 order-sm-1">

    <div class="mb-3">         
      <div data-pagelet-url="/a/<%=@group.slug%>/subscribe" style="display: inline">
        <%= partial :'groups/subscribe', :locals => {:membership => @membership} %>
      </div>
      <% if @membership.hide_from_sidebar %>
        <a class="btn btn-outline-primary mb-1" href="/a/<%=@group.slug%>/show_in_sidebar">Hidden from sidebar</a>
      <% else %>
        <a class="btn btn-primary mb-1" href="/a/<%=@group.slug%>/hide_from_sidebar">Showing in sidebar</a>
      <% end %>           
      <a class="btn btn-primary mb-1" data-confirm="Are you sure you want to leave the group?" href="/a/<%=@group.slug%>/leave">Leave group</a>
    </div>

    <p class="lead">
      Non-members can <%=  @group.enable_applications ? 'apply' : 'join' %> at <a href="<%="#{ENV['BASE_URI']}/a/#{@group.slug}/#{@group.enable_applications ? 'apply' : 'join'}"%>"><%="#{ENV['BASE_URI']}/a/#{@group.slug}/#{@group.enable_applications ? 'apply' : 'join'}"%></a>
    </p>    

    <%= partial :newsfeed, :locals => {:notifications => @notifications, :include_circle_name => false} %>

  </div>  
</div>