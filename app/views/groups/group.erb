
<%= partial :'groups/header' %>

<p>         
  <% if @membership.unsubscribed %>
    <a class="btn btn-outline-primary mb-1" href="/a/<%=@group.slug%>/subscribe">Turn on email notifications of key events</a>
  <% else %>
    <a class="btn btn-outline-primary mb-1" href="/a/<%=@group.slug%>/unsubscribe">Turn off email notifications of key events</a>
  <% end %>       
  <% if @membership.hide_from_sidebar %>
    <a class="btn btn-outline-primary mb-1" href="/a/<%=@group.slug%>/show_in_sidebar">Show in sidebar</a>
  <% else %>
    <a class="btn btn-outline-primary mb-1" href="/a/<%=@group.slug%>/hide_from_sidebar">Hide from sidebar</a>
  <% end %>           
  <a class="btn btn-outline-primary mb-1" data-confirm="Are you sure you want to leave the group?" href="/a/<%=@group.slug%>/leave">Leave group</a>
</p>

<p class="lead">
  Non-members can <%=  @group.enable_applications ? 'apply' : 'join' %> at <a href="<%="#{ENV['BASE_URI']}/a/#{@group.slug}/#{@group.enable_applications ? 'apply' : 'join'}"%>"><%="#{ENV['BASE_URI']}/a/#{@group.slug}/#{@group.enable_applications ? 'apply' : 'join'}"%></a>
</p>                 

<div class="row">
  <div class="col-sm-6">
    <div data-pagelet-url="/a/<%=@group.slug%>/todos" style="margin-top: 20px">
      <%= partial :'groups/todos' %>
    </div>    
    <% if @group.intro_for_members %>  
      <hr />
      <%= @group.intro_for_members %>        
    <% end %>  
    <h2>Online now</h2>
    <div class="image-wall">
      <% @group.members.where(:last_active.gt => 5.minutes.ago).each { |account| %>
        <%= partial :'accounts/square', :locals => {:account => account, :content => (if account.last_active; "#{time_ago_in_words account.last_active} ago"; end), :width => '75px'} %>
      <% } %>
    </div>
  </div>  
  <div class="col-sm-6">
    <div data-pagelet-url="/a/<%=@group.slug%>/newsfeed" data-pusher-channel="notifications.<%=@group.slug%>" style="margin-top: 10px"></div>
  </div>
</div>