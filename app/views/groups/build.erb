<% end %>

<h1><%= @group.persisted? ? '' : 'Create a group' %></h1>

<script>
  $(function () {

    $('#group_slug, #group_name').keyup(function () {
      $('.slug-replace').text($('#group_slug').val());
    }).keyup();

<% if @group.new_record? %>
      $('.tab-pane').each(function () {
        var tabPane = this
        $('<a href="javascript:;" class="next btn btn-primary">Next</a>').appendTo(tabPane)
        $(this).find('a.next').click(function () {
          $('#group-build-nav a[href="#' + $(tabPane).next().attr('id') + '"]').tab('show')
        })
      })
      $('#tab4').find('a.next').remove()
      $('#group_name').focus().attr('autocomplete', 'off')
<% end %>

    var pairs = []
    $.each(pairs, function (i, pair) {
      var a = pair[0]
      var b = pair[1]
      $(a).click(function () {
        if ($(a).is(':checked'))
          $(b).parent().parent().show()
        else
          $(b).parent().parent().hide()
      });
      if ($(a).is(':checked'))
        $(b).parent().parent().show()
      else
        $(b).parent().parent().hide()
    });

    $('#group_enable_applications').click(function () {
      if ($(this).is(':checked'))
        $('#application-options').show()
      else
        $('#application-options').hide()
    })
    if ($('#group_enable_applications').is(':checked'))
      $('#application-options').show()
    else
      $('#application-options').hide()

    $('#group_enable_supporters').click(function () {
      if ($(this).is(':checked'))
        $('#supporters-options').show()
      else
        $('#supporters-options').hide()
    })
    if ($('#group_enable_supporters').is(':checked'))
      $('#supporters-options').show()
    else
      $('#supporters-options').hide()

    $('#group_democratic_threshold').click(function () {
      if ($(this).is(':checked'))
        $('#group_fixed_threshold').prop('disabled', true)
      else
        $('#group_fixed_threshold').prop('disabled', false)
    })
    if ($('#group_democratic_threshold').is(':checked'))
      $('#group_fixed_threshold').prop('disabled', true)
    else
      $('#group_fixed_threshold').prop('disabled', false)

  })
</script>

<% form_for @group, @group.new_record? ? '/a/new' : "/a/#{@group.slug}/edit", :multipart => true do |f| %>


  <ul id="group-build-nav" class="nav nav-tabs" role="tablist">
    <li role="presentation" class="nav-item"><a class="nav-link active" href="#tab1" role="tab" data-toggle="tab">Basics</a></li>
    <li role="presentation" class="nav-item"><a class="nav-link" href="#tab2" role="tab" data-toggle="tab">Joining</a></li>
    <li role="presentation" class="nav-item"><a class="nav-link" href="#tab3" role="tab" data-toggle="tab">Intro for members</a></li>
    <li role="presentation" class="nav-item"><a class="nav-link" href="#tab4" role="tab" data-toggle="tab">Features</a></li>
  </ul>

  <div class="container">

    <div class="tab-content" style="margin-top: 20px">
      <div role="tabpanel" class="tab-pane active" id="tab1">    
        <%= f.text_block :name %>
        <%= f.slug_block :slug %>

        <script>
          $(function () {
            var autocomplete = new google.maps.places.Autocomplete($('#group_location')[0]);
            $('#group_location').keydown(function (e) {
              if (e.which == 13 && $('.pac-container:visible').length)
                return false;
            });
          })
        </script>
        <%= f.text_block :location %>

        <%= f.image_block :cover_image %>  
        <% if @group.new_record? %>
          <%= f.select_block :currency %>
        <% end %>   
      </div>
      <div role="tabpanel" class="tab-pane" id="tab2">
        <%= f.wysiwyg_block :intro_for_non_members %> 
        <div class="mb-2">
          <%= f.check_box_block :ask_for_facebook_profile_url %>          
        </div>
        <%= f.number_block :member_limit %>
        <div class="mb-2">
          <%= f.check_box_block :enable_applications %>          
        </div>
        <div id="application-options" style="display: none">  
          <%= f.text_area_block :application_questions %>                
          <%= f.check_box_block :require_reason_proposer %>
          <%= f.check_box_block :enable_supporters %>
          <div id="supporters-options" style="display: none">          
            <%= f.check_box_block :require_reason_supporter %>
            <%= f.check_box_block :anonymise_supporters %>                  
          </div>
          <div class="mt-2">
            <%= f.number_block :fixed_threshold %>
          </div>
          <div class="mb-2">
            <%= f.check_box_block :democratic_threshold %>          
          </div>
          <%= f.number_block :proposing_delay %>    
        </div>
      </div>
      <div role="tabpanel" class="tab-pane" id="tab3">
        <%= f.wysiwyg_block :intro_for_members %>       
      </div>
      <div role="tabpanel" class="tab-pane" id="tab4">
        <% Group.enablable.each { |x| %>
          <%= f.check_box_block "enable_#{x}".to_sym %>
        <% } %>
        <%= f.check_box_block :demand_payment %>  
        <%= f.check_box_block :hide_members_on_application_form %>    
        <div class="mt-2">
          <%= f.url_block :facebook_group_url %>    
        </div>
        <% if @group.new_record? %>
          <%= f.submit_block %>  
        <% end %>        
      </div>    
    </div>

    <% if @group.persisted? %>
      <%= f.submit_block destroy_url: "/a/#{@group.slug}/destroy" %>  
    <% end %>

  <% end %>

</div>