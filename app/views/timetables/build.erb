<%= partial :group_header %>

<h2><%= @timetable.new_record? ? 'Create a timetable' : 'Edit timetable' %></h2>

<div class="container">

  <% form_for @timetable ||= Timetable.new, @timetable.new_record? ? "/h/#{@group.slug}/timetables/new" : "/h/#{@group.slug}/timetables/#{@timetable.id}/edit" do |f| %>
    <%= f.text_block :name %>
    <%= f.wysiwyg_block :description %>    
    <%= f.check_box_block :scheduling_by_all %>
    <%= f.check_box_block :hide_schedule %>
    <%= f.submit_block destroy_url: ("/h/#{@group.slug}/timetables/#{@timetable.id}/destroy" if @membership.admin?) %>
  <% end %>  

</div>