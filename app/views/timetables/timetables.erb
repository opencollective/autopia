<%= partial :'gatherings/nav', locals: {gathering: @gathering, membership: @membership} %>

<% if admin? || @membership.admin? %>
  <div style="margin: 10px 0">
    <a class="btn btn-primary" href="/a/<%=@gathering.slug%>/timetables/new"><i class="fa fa-plus-circle"></i> Create a timetable</a>
  </div>
<% end %>

<% @gathering.timetables.each { |timetable| %>
  <h2>
    <a href="/a/<%=@gathering.slug%>/timetables/<%=timetable.id%>">
      <%=timetable.name%>
    </a>  
  </h2>
<% } %>