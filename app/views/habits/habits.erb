
<script>
  $(function () {
    $('#network-habits').html(LOADING).load('/habits/network')
    $('#my-habits').html(LOADING).load('/habits/me')

    $(document).ajaxComplete(function (event, xhr, settings) {
      if (settings.url.endsWith('/completed')) {
        $('#network-habits').html(LOADING).load('/habits/network')
        $('#my-habits').html(LOADING).load('/habits/me')
      }
    });

  })
</script>

<a class="btn btn-primary" href="javascript:;" onclick="$(this).hide().next().show().find('input').focus()"><i class="fa fa-plus-circle"></i> Add habit</a>
<div style="display: none">
  <%= partial :'habits/build' %>
</div>

<div class="row">

  <div class="col-sm-7">
    <% if !@habits.empty? %>
      <%= partial :'habits/blocks', :locals => {:block_class => 'col-sm-6'} %>
    <% end %>
  </div>

  <div class="col-sm-5">

    <ul class="nav nav-tabs" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" id="network-habits-tab" data-toggle="tab" href="#network-habits" role="tab">People in your groups</a>
      </li>  
      <li class="nav-item">
        <a class="nav-link" id="my-habits-tab" data-toggle="tab" href="#my-habits" role="tab">You</a>
      </li>
    </ul>
    <div class="tab-content">
      <div class="tab-pane fade show active" id="network-habits" role="tabpanel"></div>  
      <div class="tab-pane fade" id="my-habits" role="tabpanel"></div>
    </div>
  </div>