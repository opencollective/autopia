<div class="row justify-content-between">
  <div class="col">
    <h1>
      <%= @habit.name %>
      <% if !@habit.public? %>
        <i data-toggle="tooltip" title="Visible only to you" class="fa fa-lock"></i>
      <% end %>
    </h1>
    <% if @habit.public? %>
      <p class="lead mb-0">A habit of <a href="/accounts/<%=@habit.account_id%>"><%=@habit.account.name%></a></p>    
    <% end %>
  </div>
  <div class="col-auto">
    <% if @habit.account_id == current_account.id %>
      <a class="btn btn-primary" href="/habits/<%=@habit.id%>/edit"><i class="fa fa-pencil"></i> Edit habit</a>
    <% end %>    
  </div>
</div>

<ul class="fa-ul my-3">
  <% @habit.habit_completions.order('date desc').each { |habit_completion|  %>
    <li>
      <i class="fa fa-li fa-check"></i>
      <strong><%= habit_completion.date %><% unless habit_completion.date == Date.today%> (<%= time_ago_in_words habit_completion.date %> ago)<% end %></strong><% if habit_completion.comment %>: <%= habit_completion.comment %><% end %>
    </li>
  <% } %>
</ul>

<div data-pagelet-url="/commentable?commentable_type=Habit&commentable_id=<%=@habit.id%>">
  <%= partial :'comments/commentable', :locals => {:commentable => @habit} %>
</div>
