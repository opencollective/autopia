<% group = (comment.commentable.respond_to?(:group) ? comment.commentable.group : nil) %>


<% if comment.post.comments.count == 1 %>

  <p><%=comment.description%></p>

  <% if comment.post.subject %>
    <h1 style="margin-top: 0">
      <%=comment.post.subject%>
    </h1>
  <% end %>

<% else %>

  <% if comment.post.subject %>
    <h1 style="margin-top: 0">
      <%=comment.post.subject%>
    </h1>
  <% end %>

  <p><%=comment.description%></p>

<% end %>

<p><%=comment.body_with_additions%></p>
<% if comment.file %>
  <p>
    <% if %w{png jpg gif jpeg}.any? { |x| comment.file.name.downcase.ends_with? ".#{x}" } %>
      <img style="max-width: 100%;" src="<%=comment.file.url%>">
    <% else %>
      <a href="<%=comment.file.url%>"><%=comment.file.name%></a>
    <% end %>
  </p>
<% end %>

<% close_divs = ''; comment.post.comments.order_by(:created_at.desc)[1..-1].each { |comment| %>          
  <p>On <%=comment.created_at%>, <%=comment.account.name%> wrote:</p>
  <%= '<div style="border-left: 1px solid #ccc; margin-left: 1em; padding-left: 1em">' %>

  <p><%=comment.body_with_additions%></p>
  <% if comment.file %>
    <p>
      <% if %w{png jpg gif jpeg}.any? { |x| comment.file.name.downcase.ends_with? ".#{x}" } %>
        <img style="max-width: 100%;" src="<%=comment.file.url%>">
      <% else %>
        <a href="<%=comment.file.url%>"><%=comment.file.name%></a>
      <% end %>
    </p>
  <% end %>  

  <% close_divs << '</div>' %>
<% } %>
<%= close_divs %> 

<p style="font-size: 13px">To continue the conversation, <a href="<%=comment.post.url%>">view the post</a> or reply to this email.</p>

<p style="font-size: 12px;">
  <a style="color: #aaa !important" href="<%=ENV['BASE_URI']%>/posts/<%=comment.post_id%>/unsubscribe">Unsubscribe from this post</a>
  <% if comment.commentable.is_a?(Team) %>
    &middot;
    <a style="color: #aaa !important" href="<%=ENV['BASE_URI']%>/a/<%=group.slug%>/teams/<%=comment.commentable_id%>/unsubscribe">Unsubscribe from this team</a>
  <% end %>
  <% if comment.circle.is_a?(Group) %>
    &middot;
    <a style="color: #aaa !important" href="<%=ENV['BASE_URI']%>/a/<%=group.slug%>/unsubscribe">Unsubscribe from this group</a>    
  <% end %>
  &middot;
  <a style="color: #aaa !important" href="<%=ENV['BASE_URI']%>/accounts/edit">Unsubscribe from all emails</a>        
</p>

