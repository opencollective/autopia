<div

class="promoter p-2 d-block"
style="
height: 180px; overflow: hidden;
<% if !promoter.image %>border: 2px solid #343a40;<% end %>
<% if promoter.image %>background: linear-gradient( rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5) ), url('<%=promoter.image.thumb('400x400').url%>'); background-size: cover; background-position: center center;<% end %>
">
  <table style="width: 100%; height: 100%">
    <tr>
      <td style="vertical-align: top">
        <div class="row justify-content-between">
          <div class="col">
            <h4 class="block-title">
              <a class="<% if promoter.image %>text-white<% else %>text-dark<% end%>" target="_parent" href="/promoters/<%=promoter.id%>" onclick="event.stopPropagation();">
                <%= promoter.name %>
              </a>
              <% if current_account and current_account.id == promoter.account_id %>
                <a class="<% if promoter.image %>text-white<% else %>text-dark<% end%> promoter-edit" style="display: none" href="/promoters/<%=promoter.id%>/edit" onclick="event.stopPropagation();">
                  <i class="fa fa-pencil"></i>
                </a>
              <% end %>
            </h4>
          </div>
        </div>
      </td>
    </tr>
  </table>
</div>
