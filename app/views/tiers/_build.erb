<% form_for @tier ||= Tier.new, @tier.new_record? ? "/a/#{@group.slug}/tiers/new" : "/a/#{@group.slug}/tiers/#{@tier.id}/edit" do |f| %>
  <%= f.text_block :name %>
  <%= f.text_area_block :description %>
  <%= f.number_block :cost %>
  <%= f.submit_block destroy_url: "/a/#{@group.slug}/tiers/#{@tier.id}/destroy" %>
<% end %>  