<% form_for @quality ||= Quality.new, @quality.new_record? ? "/a/#{@group.slug}/qualities/new" : "/a/#{@group.slug}/qualities/#{@quality.id}/edit" do |f| %>
  <%= f.text_block :name %>
  <%= f.url_block :link %>
  <%= f.image_block :image %>
  <%= f.submit_block destroy_url: "/a/#{@group.slug}/qualities/#{@quality.id}/destroy" %>
<% end %>  