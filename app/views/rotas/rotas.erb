<%= partial :'gatherings/nav', locals: {gathering: @gathering, membership: @membership} %>

<% if admin? || @membership.admin? %>
  <div style="margin: 10px 0">
    <a class="btn btn-primary" href="/a/<%=@gathering.slug%>/rotas/new"><i class="fa fa-plus-circle"></i> Create a rota</a>
  </div>
<% end %>

<% @gathering.rotas.each { |rota| %>
  <h2>
    <a href="/a/<%=@gathering.slug%>/rotas/<%=rota.id%>">
      <%=rota.name%>
    </a>  
  </h2>  
<% } %>